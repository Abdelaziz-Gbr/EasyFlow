<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.homeScreen.fragmentHome.HomeFragment">
<data>
    <variable
        name="viewModel"
        type="com.easyflow.activities.homeScreen.fragmentHome.HomeFragmentViewModel" />
</data>
    <LinearLayout
        android:id="@+id/homeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D6A6E"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/account_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_account" />


        <TextView
            android:id="@+id/hello_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{viewModel.welcomeText}"
            android:textColor="@color/teal_200"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_balance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@{viewModel.currentBalance}"
            android:textColor="@color/teal_200"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/qr_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.5"
                android:background="@color/teal_700"
                android:text="QR"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:enabled="@{viewModel.enableNFCButton}"
                android:id="@+id/nfc_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.5"
                android:background="@color/teal_700"
                android:text="NFC"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/navigate_to_recharge_fragment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/teal_700"
            android:text="Recharge"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </LinearLayout>

</layout>