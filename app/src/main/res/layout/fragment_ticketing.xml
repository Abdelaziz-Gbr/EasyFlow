<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.trips.fragmentTicketing.FragmentTicketing"
        android:background="@color/main_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/please_enter_the_number_of_passengers"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passenger_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/enter_the_number_of_passengers">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passenger_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:inputType="number"
                android:textColorHint="#000000"
                android:text="@string/_1"
                android:digits="0123456789" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/get_passernger_count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:text="@string/confirm"
            style="@style/button_style" />


    </LinearLayout>
</layout>